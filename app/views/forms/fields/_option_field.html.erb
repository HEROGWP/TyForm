<fieldset class="form-group option-section">
	
	<div class="form-inline">
			<div class="form-group">
				<%= f.label "Option"%>
				<%= f.text_field :content, placeholder: "Option_name" ,class:"form-control"%>
			</div>
			<div class="form-group">
				<%= f.hidden_field :_destroy%>
				<%= link_to "remove" , '#' , class: "remove_fields"%>
			</div>
	</div>
</fieldset>