<div class="col-md-8 col-md-offset-2 inner-section">
<p id="notice"><%= notice %></p>

<h1>Listing Forms</h1>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Form Name</th>
        <th>Edit</th>
        <th>Link</th>
      </tr>
    </thead>

    <tbody>
      <% @forms.each do |form| %>
        <tr>
          <td><%= link_to form.name, form %></td>
          <td><%= link_to "Edit", edit_form_path(form) %></td>
          <td><%= link_to new_form_reply_url(form.id)%></td>
          <!-- <td><% link_to 'Edit', edit_form_path(form) %></td> -->
          <td><%= link_to 'Destroy', form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Form', new_form_path ,class:"btn btn-success" %>

</div>
